<h1>New blog post</h1>

<%= form_with model: @blog_post do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% form.object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit "Create Blog Post" %>
  </div>
<% end %>
